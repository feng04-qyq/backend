# ═══════════════════════════════════════════════════════════════
# Bybit AI Trading System - 环境变量示例
# ═══════════════════════════════════════════════════════════════
# 复制此文件为 .env 并填写实际配置
# 命令: cp env.example .env
# ═══════════════════════════════════════════════════════════════

# ============================================================================
# 数据库配置
# ============================================================================

# PostgreSQL连接字符串
# 格式: postgresql://用户名:密码@主机:端口/数据库名
DATABASE_URL=postgresql://trading_user:your_password_here@localhost:5432/bybit_trading

# ============================================================================
# JWT认证配置
# ============================================================================

# JWT密钥（生成命令: openssl rand -hex 32）
JWT_SECRET_KEY=your_jwt_secret_key_here_use_openssl_rand_hex_32

# JWT算法
JWT_ALGORITHM=HS256

# Token过期时间（分钟）
JWT_EXPIRE_MINUTES=30

# ============================================================================
# 应用配置
# ============================================================================

# 后端端口
BACKEND_PORT=8000

# 前端URL（用于CORS配置）
FRONTEND_URL=http://localhost:3000

# 应用环境 (development/production)
ENVIRONMENT=production

# ============================================================================
# DeepSeek AI配置（可选，也可从前端配置）
# ============================================================================

# DeepSeek API密钥
DEEPSEEK_API_KEY=

# DeepSeek模型
DEEPSEEK_MODEL=deepseek-chat

# AI温度（0.0-1.0，推荐0.3）
DEEPSEEK_TEMPERATURE=0.3

# ============================================================================
# Bybit API配置（可选，也可从前端配置）
# ============================================================================

# Bybit API密钥
BYBIT_API_KEY=

# Bybit API密钥
BYBIT_API_SECRET=

# 是否使用测试网（true/false）
BYBIT_TESTNET=true

# ============================================================================
# 日志配置
# ============================================================================

# 日志级别 (DEBUG/INFO/WARNING/ERROR/CRITICAL)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=/home/trading/app/logs/app.log

# 是否输出到控制台
LOG_TO_CONSOLE=true

# ============================================================================
# 缓存配置
# ============================================================================

# AI决策缓存大小
AI_CACHE_SIZE=100

# 缓存过期时间（秒）
CACHE_TTL=300

# ============================================================================
# 性能配置
# ============================================================================

# Uvicorn工作进程数
WORKERS=2

# 最大并发连接数
MAX_CONNECTIONS=100

# 请求超时（秒）
REQUEST_TIMEOUT=60

# ============================================================================
# 安全配置
# ============================================================================

# 允许的跨域来源（多个用逗号分隔）
CORS_ORIGINS=http://localhost:3000,http://localhost

# 速率限制（请求/分钟）
RATE_LIMIT=60

# 是否启用HTTPS重定向
FORCE_HTTPS=false



